{
  "functions": [
    {
      "source": "packages/website-server",
      "codebase": "default",
      "ignore": [
        "node_modules",
        ".git",
        "firebase-debug.log",
        "firebase-debug.*.log"
      ],
      "predeploy": [
        "npm run lint -w \"$RESOURCE_DIR\" ",
        "npm run build -w \"$RESOURCE_DIR\" "
      ]
    }
  ],
  "hosting": {
    "public": "public",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "/services/sstm/**",
        "run": {
          "serviceId": "server-side-tagging",
          "region": "europe-west1"
        }
      },
      {
        "source": "/services/sstm-preview/**",
        "run": {
          "serviceId": "server-side-tagging-preview",
          "region": "europe-west1"
        }
      },
      {
        "source": "**",
        "function": "helloWorld",
        "region": "us-central1"
      }
    ]
  }
}
