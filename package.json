{
  "name": "@dropbear/website",
  "version": "0.0.1",
  "description": "Dropbear.dev website",
  "main": "lib/app_shell.js",
  "module": "lib/app_shell.js",
  "type": "module",
  "private": true,
  "exports": {
    ".": {
      "development": "./lib/app_shell.js",
      "default": "./dist/app_shell.js"
    }
  },
  "scripts": {
    "start": "wireit",
    "deploy": "wireit"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/dropbear-software/dropbear.dev.git"
  },
  "author": "Mark Hoad",
  "bugs": {
    "url": "https://github.com/dropbear-software/dropbear.dev/issues"
  },
  "homepage": "https://github.com/dropbear-software/dropbear.dev#readme",
  "devDependencies": {
    "eslint-plugin-import": "^2.28.0",
    "wireit": "^0.10.0",
    "zx": "^7.2.3"
  },
  "workspaces": [
    "packages/design-system",
    "packages/website-server",
    "packages/web-frontend"
  ],
  "wireit": {
    "start": {
      "command": "firebase emulators:start",
      "service": true,
      "dependencies": [
        "./packages/website-server:build",
        "./packages/web-frontend:build",
        "copy:assets"
      ]
    },
    "copy:assets": {
      "command": "zx tool/copy-assets.js",
      "dependencies": [
        "./packages/design-system:build"
      ]
    },
    "deploy": {
      "command": "firebase deploy",
      "env": {
        "CI": "true"
      },
      "dependencies": [
        "./packages/design-system:build",
        "./packages/website-server:build",
        "copy:assets"
      ]
    }
  },
  "dependencies": {
  }
}
