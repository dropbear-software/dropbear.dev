{
  "name": "@dropbear/website-server",
  "type": "module",
  "private": true,
  "scripts": {
    "lint": "eslint --ext .js,.ts .",
    "lint:fix": "eslint --fix --ext .js,.ts .",
    "build": "wireit",
    "build:watch": "tsc --watch",
    "serve": "wireit",
    "shell": "wireit",
    "start": "npm run shell",
    "start:ff": "wireit",
    "deploy": "firebase deploy --only functions",
    "logs": "firebase functions:log"
  },
  "engines": {
    "node": "18"
  },
  "main": "lib/index.js",
  "module": "lib/index.js",
  "dependencies": {
    "@google-cloud/functions-framework": "^3.3.0",
    "express": "^4.18.2",
    "firebase-admin": "^11.8.0",
    "firebase-functions": "^4.3.1"
  },
  "devDependencies": {
    "@types/express": "^4.17.17",
    "@types/node": "^20.5.0",
    "@typescript-eslint/eslint-plugin": "^6.4.0",
    "@typescript-eslint/parser": "^6.4.0",
    "eslint": "^8.9.0",
    "eslint-config-google": "^0.14.0",
    "eslint-plugin-import": "^2.25.4",
    "firebase-functions-test": "^3.1.0",
    "typescript": "^5.1.6",
    "wireit": "^0.10.0"
  },
  "wireit": {
    "build": {
      "dependencies": [
        "compile:typescript"
      ]
    },
    "compile:typescript": {
      "command": "tsc --build --pretty",
      "clean": "if-file-deleted",
      "files": [
        "src/**/*.ts",
        "tsconfig.json",
        "tsconfig.dev.json"
      ],
      "output": [
        "lib/**",
        "tsconfig.tsbuildinfo",
        "types/**"
      ]
    },
    "serve": {
      "command": "firebase emulators:start --only functions",
      "service": true,
      "dependencies": [
        "compile:typescript"
      ]
    },
    "shell": {
      "command": "firebase functions:shell",
      "service": true,
      "dependencies": [
        "compile:typescript"
      ]
    },
    "start:ff": {
      "command": "functions-framework --target=helloWorld",
      "service": true,
      "dependencies": [
        "compile:typescript"
      ]
    }
  }
}
