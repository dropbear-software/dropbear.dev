{
  "name": "@dropbear/web-frontend",
  "version": "0.0.1",
  "description": "",
  "type": "module",
  "main": "lib/index.js",
  "types": "types/index.d.ts",
  "private": true,
  "directories": {
    "lib": "lib"
  },
  "exports": {
    ".": {
      "import": {
        "types": "./types/index.d.ts",
        "default": "./lib/index.js"
      }
    },
    "./services/firebase.js": {
      "types": "./types/services/firebase.d.ts",
      "default": "./lib/services/firebase.js"
    },
    "./services/csa.js": {
      "types": "./types/services/csa.d.ts",
      "default": "./lib/services/csa.js"
    },
    "./pages/contact-page.js": {
      "types": "./types/pages/home/homepage.d.ts",
      "default": "./lib/pages/home/homepage.js"
    },
    "./importmap.json": {
      "default": "./importmaps/importmap-prod.json",
      "development": "./importmaps/importmap-dev.json"
    }
  },
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "build": "wireit",
    "build:clean": "wireit"
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "jspm": "^3.0.2",
    "typescript": "^5.1.6",
    "wireit": "^0.10.0",
    "zx": "^7.2.3"
  },
  "wireit": {
    "build": {
      "dependencies": [
        "../design-system:build",
        "build:importmaps"
      ]
    },
    "build:clean": {
      "command": "npm run build",
      "env": {
        "WIREIT_CACHE": "none"
      }
    },
    "build:importmaps":{
      "command": "zx tool/generate_importmaps.js",
      "files": [
        "lib/**/*.js"
      ],
      "output": [
        "importmaps/*.json"
      ],
      "dependencies": [
        "compile:typescript"
      ]
    },
    "compile:typescript": {
      "command": "tsc --build --pretty",
      "clean": "if-file-deleted",
      "files": [
        "src/**/*.ts",
        "tsconfig.json"
      ],
      "output": [
        "lib/**/*.{js,js.map,json}",
        "tsconfig.tsbuildinfo",
        "types/**"
      ]
    }
  },
  "dependencies": {
    "@lit-labs/context": "^0.4.0",
    "firebase": "^10.1.0",
    "lit": "^2.7.6",
    "tslib": "^2.6.1"
  }
}
